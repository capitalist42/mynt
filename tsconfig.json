{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./transpiled/",
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@utils/*": [
        "test-utils/*"
      ],
    },
    "allowJs": true,
    "typeRoots": [
      "node_modules/@0x/typescript-typings/types",
      "node_modules/@types"
    ],
  },
  "include": [
    "./types/*.ts",
    "./types/chai.d.ts",
    "./types/interfaces.d.ts",
    "./types/**/*.ts",
    "./test/*.ts",
    "./typechain",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./test-utils/*.ts",
    "./test-utils/**/*.ts",
    "./migrations",
    "./deploy/**/*.ts",
    "./tasks/**/*.ts",
    ".eslintrc.js"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}